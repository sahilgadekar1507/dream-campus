<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="container mt-4">
    <!-- Header Section -->
    <div class="text-center">
      <h1 class="fw-bold">Explore your Dream</h1>
      <div class="search-bar d-flex justify-content-center mt-3">
        <input type="text" class="form-control w-50" placeholder="Explore colleges...">
        <button class="btn btn-outline-secondary ms-2">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="row mt-4 d-flex justify-content-center">
      <div class="col-md-2 col-sm-3 col-6 text-center">
        <button class="btn btn-dark w-100 py-2">
          Notifications <span class="badge bg-danger ms-1">1</span>
        </button>
      </div>
      <div class="col-md-2 col-sm-3 col-6 text-center">
        <a href="/listings" class="btn btn-dark w-100 py-2">Colleges</a>
      </div>
      <div class="col-md-2 col-sm-3 col-6 text-center">
        <a href="/listings/admission" class="btn btn-dark w-100 py-2">Admission</a>
      </div>
      <div class="col-md-2 col-sm-3 col-6 text-center">
        <a href="/chatbot" class="btn btn-dark w-100 py-2 disabled">ChatBot</a>
      </div>
    </div>

    <!-- Lower Section -->
    <div class="mt-5 text-center">
      <h2 class="fw-bold">Why Choose Us?</h2>
      <div class="row mt-4">
        <div class="col-md-4">
          <div class="card p-3 shadow-sm">
            <i class="fas fa-graduation-cap fa-3x mb-3"></i>
            <h5>Top Colleges</h5>
            <p>Get access to the best colleges with detailed insights.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 shadow-sm">
            <i class="fas fa-book-open fa-3x mb-3"></i>
            <h5>Complete Guidance</h5>
            <p>We assist students from application to admission.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 shadow-sm">
            <i class="fas fa-handshake fa-3x mb-3"></i>
            <h5>Personalized Support</h5>
            <p>Get one-on-one support for any queries regarding admissions.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
