<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="container mt-4">
    <!-- Header Section -->
    <div class="text-center mb-5">
      <h1 class="fw-bold">Admission Information</h1>
      <p class="text-muted">Comprehensive list of essential documents required for major entrance exams in India</p>
    </div>

    <!-- Navigation Buttons -->
    <div class="row mb-5 justify-content-center">
      <div class="col-md-2 col-sm-4 col-6 mb-2">
        <a href="/listings" class="btn btn-outline-dark w-100">Colleges</a>
      </div>
      <div class="col-md-2 col-sm-4 col-6 mb-2">
        <a href="/listings/admission" class="btn btn-dark w-100 active">Admission</a>
      </div>
      <div class="col-md-2 col-sm-4 col-6 mb-2">
        <a href="/listings/contact" class="btn btn-outline-dark w-100">Contact</a>
      </div>
    </div>

    <!-- Admission Details Section -->
    <div class="row">
      <!-- MHT CET -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h4 class="card-title text-center">MHT CET</h4>
            <ul class="list-unstyled mt-3">
              <li>✔️ Class 10th Mark Sheet</li>
              <li>✔️ Class 12th Mark Sheet</li>
              <li>✔️ Aadhaar Card</li>
              <li>✔️ Passport Size Photograph (15–50 KB, JPG/JPEG)</li>
              <li>✔️ Signature (5–20 KB, JPG/JPEG)</li>
              <li>✔️ Domicile Certificate (if applicable)</li>
              <li>✔️ Category Certificate (if applicable)</li>
              <li>✔️ Proof of Date of Birth</li>
              <li>✔️ Address Proof</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- JEE Main -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h4 class="card-title text-center">JEE Main</h4>
            <ul class="list-unstyled mt-3">
              <li>✔️ Class 10th Mark Sheet</li>
              <li>✔️ Class 12th Mark Sheet</li>
              <li>✔️ Passport Size Photograph (10–200 KB, JPG/JPEG)</li>
              <li>✔️ Signature (4–30 KB, JPG/JPEG)</li>
              <li>✔️ Photo ID Proof (Aadhaar Card, Passport, etc.)</li>
              <li>✔️ Category Certificate (if applicable)</li>
              <li>✔️ PwD Certificate (if applicable)</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- NEET -->
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h4 class="card-title text-center">NEET</h4>
            <ul class="list-unstyled mt-3">
              <li>✔️ Class 10th Certificate</li>
              <li>✔️ Passport Size Photograph (10–200 KB, JPG)</li>
              <li>✔️ Postcard Size Photograph (4” x 6”, 10–200 KB, JPG)</li>
              <li>✔️ Signature (4–30 KB, JPG)</li>
              <li>✔️ Left-hand Thumb Impression (10–200 KB, JPG)</li>
              <li>✔️ Category Certificate (if applicable)</li>
              <li>✔️ PwBD Certificate (if applicable)</li>
              <li>✔️ Address Proof</li>
              <li>✔️ Identity Proof</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <div class="text-center mt-5">
      <h2 class="fw-bold">Need Assistance?</h2>
      <p class="text-muted">If you have any queries regarding the admission process or required documents, feel free to reach out to us.</p>
      <a href="/listings/contact" class="btn btn-dark mt-3">Contact Us</a>
    </div>
  </div>
</body>
