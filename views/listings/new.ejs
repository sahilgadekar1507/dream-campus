<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container mt-3">
    <h2 class="mb-4">Create New College</h2>

    <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate>

      <!-- College Image -->
      <div class="col-md-12">
        <label class="form-label">College Image (URL)</label>
        <input type="text" name="listing[image]" class="form-control" placeholder="Enter image link" required>
        <div class="invalid-feedback">Please enter the image link</div>
      </div>

      <!-- College Code -->
      <div class="col-md-4">
        <label class="form-label">College Code</label>
        <input type="number" name="listing[code]" class="form-control" placeholder="Enter college code" required>
        <div class="invalid-feedback">Please enter the image link</div>
      </div>

      <!-- College Name -->
      <div class="col-md-8">
        <label class="form-label">College Name</label>
        <input type="text" name="listing[name]" class="form-control" placeholder="Enter college name" required>
        <div class="invalid-feedback">Please enter the college name</div>
      </div>

      <!-- College Type -->
      <div class="col-md-4">
        <label class="form-label">College Type</label>
        <input type="text" name="listing[type]" class="form-control" placeholder="Autonomous / Non-Autonomous" required>
        <div class="invalid-feedback">enter the required data</div>
      </div>

      <!-- College Accreditation -->
      <div class="col-md-4">
        <label class="form-label">College Accreditation</label>
        <input type="text" name="listing[accreditation]" class="form-control" placeholder="Enter accreditation" required>
        <div class="invalid-feedback">Please enter the accreditation</div>
      </div>

      <!-- College Affiliation -->
      <div class="col-md-4">
        <label class="form-label">College Affiliation</label>
        <input type="text" name="listing[affiliation]" class="form-control" placeholder="Enter affiliation" required>
        <div class="invalid-feedback">Please enter the affiliation</div>
      </div>

      <!-- Established Year -->
      <div class="col-md-4">
        <label class="form-label">Established Year</label>
        <input type="number" name="listing[establishedYear]" class="form-control" placeholder="Enter established year" required>
        <div class="invalid-feedback">Please enter the established year</div>
      </div>

      <!-- College Location -->
      <div class="col-md-4">
        <label class="form-label">Location</label>
        <input type="text" name="listing[location]" class="form-control" placeholder="Enter location" required>
        <div class="invalid-feedback">Please enter the college location</div>
      </div>

      <!-- Exam Type -->
      <div class="col-md-4">
        <label class="form-label">Exam Type</label>
        <input type="text" name="listing[exam]" class="form-control" placeholder="Enter exam types" required>
        <div class="invalid-feedback">Please enter the exam types</div>
      </div>

      <!-- College Fees -->
      <div class="col-md-4">
        <label class="form-label">College Fees (INR)</label>
        <input type="number" name="listing[fees]" class="form-control" placeholder="Enter college fees" required>
        <div class="invalid-feedback">Please enter the college fees</div>
      </div>

      <!-- Phone Number -->
      <div class="col-md-4">
        <label class="form-label">Contact Number</label>
        <input type="number" name="listing[phoneNumber]" class="form-control" placeholder="Enter contact number" required>
        <div class="invalid-feedback">Please enter the image link</div>
      </div>

      <!-- College Email -->
      <div class="col-md-4">
        <label class="form-label">Email</label>
        <input type="email" name="listing[email]" class="form-control" placeholder="Enter email" required>
        <div class="invalid-feedback">Please enter the college contact details</div>
      </div>

      <!-- College Website -->
      <div class="col-md-4">
        <label class="form-label">Website</label>
        <input type="url" name="listing[website]" class="form-control" placeholder="Enter website URL" required>
        <div class="invalid-feedback">Please enter the college details</div>
      </div>

      <!-- Placement Rate -->
      <div class="col-md-4">
        <label class="form-label">Placement Rate (%)</label>
        <input type="number" step="0.1" name="listing[placementRate]" class="form-control" placeholder="Enter placement rate" required>
        <div class="invalid-feedback">Please enter the college placement ratio</div>
      </div>

      <!-- Cutoff -->
      <div class="col-md-4">
        <label class="form-label">Cutoff</label>
        <input type="number" step="0.1" name="listing[cutoff]" class="form-control" placeholder="Enter cutoff " required>
        <div class="invalid-feedback">Please enter the college cutoff</div>
      </div>

      <!-- College Description -->
      <div class="col-md-12">
        <label class="form-label">College Description</label>
        <textarea name="listing[description]" class="form-control" rows="5" placeholder="Describe hostel, facilities, placements, scholarships, achievements, etc." required></textarea>
        <div class="invalid-feedback">Please write the detailed description</div>
      </div>

      <!-- Rating -->
      <div class="col-md-4">
        <label class="form-label">Rating (out of 5)</label>
        <input type="number" step="0.1" name="listing[rating]" class="form-control" placeholder="Enter rating" required>
        <div class="invalid-feedback">enter college rating</div>
      </div>

      <!-- Submit Button -->
      <div class="col-12">
        <button type="submit" class="btn btn-dark">Add College</button>
      </div>

    </form>
  </div>
</body>
